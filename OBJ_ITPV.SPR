		DO ULatrcampo
		RETURN .T.
    ENDIF

    IF FOUND()
       SET NEAR OFF
	   SELE &wl_arqtmp
	   DO ULatrcampo
       RETURN .T.
    ENDIF
    SET NEAR OFF
	IF LASTKEY() = 27
		REPLACE &wl_arqtmp .codigo	WITH  SPACE(11)
	ENDIF
RETURN .F.


