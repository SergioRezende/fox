	   ENDIF					
	   RETURN .f.
	ENDIF
   	SELECT grupo
    SET ORDER TO  TAG codigo
    SET NEAR ON
    SEEK RTRIM(&wl_arqtmp .codigo)

	IF LASTKEY() = 9
        SET NEAR OFF
		ON KEY LABEL ESCAPE
	    DO brbrow
