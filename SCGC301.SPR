PROCEDURE ULnumchq
	LNtmp 	= 	0 	&&		numero de registros p/ processo (temporario)	
	LSmarcador	= "  "	&& marcador de processo em video
	SELE pagar
	SET ORDER TO TAG bordero
	GO LNregver
***> DESCOBRE NUMERO DO ULTIMO CHEQUE
	DO WHILE !EOF() AND m.banco 	= pagar.banco 	AND ;
						m.data		= pagar.dt_pgto AND	;
						m.empresa 	= pagar.empresa AND ;
						m.numero	= pagar.numero
		IF pagar.cheque > m.chqctr
			m.chqctr 	=	pagar.cheque
			m.cheque	= 	m.chqctr
		ENDIF
		DO UPmarcador		
		SKIP
	ENDDO
***>
*----->
PROCEDURE ULfazimport

	SET ORDER TO TAG vencbanco
	GO LNregimp
	DO WHILE !EOF() AND	m.empresa = pagar.empresa;	
					AND m.banco = pagar.banco ;
					AND pagar.vence <= m.dt_fim ;
					AND  LFsegue

		DO RELLINHA   && CONTROLA PROGRESSAO DE STATUS

		IF !EMPTY(pagar.dt_pgto) AND ( 	m.data 	 <> pagar.dt_pgto	OR;
										m.numero <> pagar.numero)
			SKIP
			LOOP
		ENDIF

		SCATTER FIELDS fornecedor, doc, valor MEMVAR
		SELE chqpag
		SET ORDER TO TAG doc
		IF SEEK(STR(m.empresa,3)+STR(pagar.fornecedor,5)+;
								  STR(pagar.doc,11)+"N")
			&& documento ja foi incluido em outro pagto normal
			IF m.data = chqpag.data AND m.numero = chqpag.numero AND ;
			   m.banco = chqpag.banco
				LNctrdoc 	= 	LNctrdoc + 1
				LNtotacm	= 	LNtotacm + m.valor
				IF pagar.cheque = 0 OR pagar.valor = 0 && seguranca
					DO ULatupagar    && atualiza contas a pagar
				ENDIF
			ENDIF
			SELE pagar
			SKIP
			LOOP
		ENDIF
		m.tp_agrupa = 	pagar.tp_cobr
		=ULgrvcheque()   && GRAVAR REGISTROS PRINCIPAIS
		SKIP
	ENDDO
RETURN

