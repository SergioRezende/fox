PROCEDURE ULimprime
	SELECT fornece
	SET ORDER TO TAG codigo
	SELECT  chqpag
	SET ORDER TO TAG cheques
	SET NEAR ON
	SEEK STR(m.empresa,3)+DTOS(m.data)+STR(m.numero,5)+STR(m.banco,3)
	SET NEAR OFF
	IF EOF() OR	m.numero 	<> numero 	OR ;
				wp_empresa 	<> empresa 	OR ;
				m.banco 	<> banco 	OR ;
				m.data 		<> data
 		WAIT WINDOW "Nao Foram encotrados doc. para impessao."
 		SELE chqcap
		UNLOCK
 		RETURN
 	ENDIF		
*******************
*---->   (INICIALIZACAO DO CONTROLE DE STATUS IMPRESSAO)
*******************	
	PUBLIC LNimpressao   && registro para impressao
	PUBLIC LNregistro    && posicao do arquivo antes de processos
	PUBLIC LNimpressos   && registros impressos
	PUBLIC LNpercentual  && percentual completado
    PUBLIC LFsegue      && continuidade da impressao

	LFsegue = .t.
	LNregistro = RECNO()
    COUNT FOR chqpag.tp_reg = "P" ;
	    WHILE 	m.numero 	= numero 	AND ;
				wp_empresa 	= empresa 	AND ;
				m.banco 	= banco 	AND ;
				m.data 		= data       TO   LNimpressao
	LNimpressos = 0
	GO LNregistro
*******************
*---->   (COMPLETADO PREPARACAO DO CONTROLE DE STATUS IMPRESSAO)
*******************	
*	SET PDSETUP TO  "* "  && IDENTIFICA TIPO DE IMPRESSORA (DRIVE)
	DO PRTSETUP.SPR
	IF LASTKEY() = 27
		RETURN
	ENDIF	
	SET RELATION TO fornecedor INTO fornece
	LSbanco = "CHQ"+CHRTRAN(STR(m.banco,3)," ","0")
    REPORT FORM &LSbanco ;
	    FOR chqpag.tp_reg = "P" ;
	    WHILE 	m.numero 	= numero 	AND ;
				wp_empresa 	= empresa 	AND ;
				m.banco 	= banco 	AND ;
				m.data 		= data      AND LFsegue ;
		NOCONSOLE 	 TO PRINTER
    SET PRINTER TO SET('PRINTER',1)

RETURN

