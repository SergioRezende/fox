PROCEDURE ULatupagar    && atualiza contas a pagar
		SELE pagar
		=REGLOCK()
		REPLACE pagar.cheque  	with chqpag.cheque		
		REPLACE pagar.dt_pgto 	with chqcap.data
		REPLACE pagar.vlr_pgto	with pagar.valor
RETURN

PROCEDURE ULgrvcheque
*---------------------------------------------------
*   Caso o cheque seja nominal ao fornecedor e contenha apenas um
* pagamento nao serao criados registros tipo "I" para o cheque
*---------------------------------------------------
		SELE chqpag
		SET ORDER TO TAG cheques
		IF m.tp_agrupa = 1         && AGRUPAMENTO POR CHQ. NOMINAL AO BANCO
			m.fornecedor = 99999
			m.doc		= 	99999999999
		ENDIF
		SEEK STR(m.empresa,3)+DTOS(m.data)+STR(m.numero,5)+;
				 STR(m.banco,3)+STR(m.fornecedor,5)+"P"
		m.tp_reg 	= 	"P"	&& registro do cheque (acumulador)
*<<<<<<   EVITA A INCLUSAO DE DOCS P/ CHEQUE JA PROCESSADO	>>>>>>>>>>>
		IF FOUND() AND chqpag.status <> "NA" && cheque nao pode ser alt.
			RETURN (.F.)
		ENDIF
*
		DO CASE
			CASE  !FOUND()
				m.chqctr	= 	m.chqctr + 1
				m.cheque	= 	m.chqctr
				m.qtd_anexo = 1
				IF m.tp_agrupa = 1   && NOMINAL AO BANCO
				    m.historico = 	ALLTRIM(STR(m.doc,11))+"/"	
					m.qtd_anexo = 2
					m.vence  	= 	CTOD('  .  .')
					=edithand('SAVE')
					DO ULgrvinfo
				ELSE
					m.historico = 	LOWER(pagar.descricao)
					m.vence  	= 	pagar.vence
					=edithand('SAVE')
					LNctrdoc 	= 	LNctrdoc + 1
					LNtotacm	= 	LNtotacm + m.valor
				ENDIF
			CASE FOUND() AND chqpag.qtd_anexo = 1
			   =REGLOCK(.T.)

*-------> transforma o principal em informativo
				m.qtd_anexo = 2
				IF m.tp_agrupa <> 1   && NOMINAL AO FORNECEDOR
					SCATTER FIELDS  doc, valor, historico MEMVAR
					m.tp_reg = "I"
					GATHER MEMVAR MEMO

*------> gera o principal novamente acumulando os dois documentos

		   		    m.cheque	= 	chqpag.cheque
					m.tp_reg 	= "P"
				    m.historico = 	ALLTRIM(STR(m.doc,11))+"/"	+;
					    			ALLTRIM(STR(pagar.doc,11))+"/"	
					m.valor = m.valor + pagar.valor
					m.doc		= 	99999999999
					m.vence  	= 	CTOD('  .  .')
					=edithand('SAVE')
					SELE pagar
					SCATTER FIELDS fornecedor, doc, valor MEMVAR
					SELE chqpag
				ELSE
	 	     	 	REPLACE historico WITH chqpag.historico+;
		   								ALLTRIM(STR(m.doc,11))+"/"	
			   		REPLACE valor 	  WITH chqpag.valor+m.valor
			   		REPLACE qtd_anexo WITH 2
		   		    m.cheque	= 	chqpag.cheque
				ENDIF
			   	UNLOCK
				DO ULgrvinfo

			CASE FOUND()      && ===>  chqpag.qtd_anexo > 1
			   =REGLOCK(.T.)
			   REPLACE historico WITH chqpag.historico+;
		   								ALLTRIM(STR(m.doc,11))+"/"	
			   REPLACE valor 	 WITH chqpag.valor+m.valor
		   	   REPLACE qtd_anexo WITH chqpag.qtd_anexo+1

	  		   m.doc		= 	99999999999
	  		   m.cheque	= 	chqpag.cheque
			   UNLOCK
 			   DO ULgrvinfo
		ENDCASE
		DO ULatupagar    && atualiza contas a pagar
	
RETURN(.T.)


PROCEDURE ULgrvinfo
		SELE pagar
		SCATTER FIELDS fornecedor, doc, valor MEMVAR
		SELE chqpag
		LNctrdoc 	= 	LNctrdoc + 1
		LNtotacm	= 	LNtotacm + m.valor
		m.tp_reg 	= 	"I"	&& registro informativo dos docs. pagos
		m.historico = 	LOWER(pagar.descricao)
		m.vence  	= 	pagar.vence
		=edithand('SAVE')

RETURN

