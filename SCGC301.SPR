PROCEDURE ULimporta
	LFverimporta = .f.  && INDICA SE PROC. DE VERIF. DE IMPORT. SERA exc.
	LFimporta 	 = .T. 	&& INDICA SE PROC. DE IMPORT. DEV SER EXECUTADO
	LNregver	= 	0	&& POSICIONA NO 1o REGISTRO P/ VERIFICACAO
	LNregimp	= 	0	&& POSICIONA NO 1o REGISTRO P/ IMPORTACAO
	
	SELE chqcap
	IF !REGLOCK()
 		WAIT WINDOW "Nao Foi possivel bloquear Capa. Tente novamente."
		RETURN
	ENDIF	

****>  (VERIFICACAO DE IMPORTACAO ANTERIOR)
	SELE pagar
	SET ORDER TO TAG bordero
	SEEK STR(m.empresa,3)+DTOS(m.data)+STR(m.banco,3)+STR(m.numero,5)
	LNregver 	= 0
 	IF FOUND()
 		LFverimport = .t.
		LNregver 	= RECNO()
 	ENDIF		
****>  (VERIFICACAO DE DISPONIBILIDADE DE DADOS P/ IMPORTACAO)
	SELE pagar
	SET ORDER TO TAG vencbanco
	SET NEAR ON
	SEEK STR(m.empresa,3)+STR(m.banco,3)+DTOS(m.dt_inicio)
	SET NEAR OFF
	LNregimp 	= 0
 	IF  m.empresa <> pagar.empresa  OR m.banco <> pagar.banco  ;
 		OR  pagar.vence > m.dt_fim OR EOF()
		IF !LFverimporta
	 		WAIT WINDOW "Nao Foram encotrados doc. para importacao."
 			SELE chqcap
			UNLOCK
	 		RETURN
		ENDIF
		LFimporta = .f.
	ELSE
		LNregimp 	= RECNO()
 	ENDIF		
*******************
*---->   (INICIALIZACAO DO CONTROLE DE STATUS PROCESSO)
*******************	
	DO RELINIC   &&  INICIALIZA CONTROLE DE STATUS

	IF LFimporta
		COUNT  ;
		WHILE 	m.banco = pagar.banco AND pagar.vence <= m.dt_fim ;
		AND	m.empresa = pagar.empresa TO   LNimpressao
	ENDIF
*******************
*---->   (COMPLETADO PREPARACAO DO CONTROLE DE STATUS PROCESSO)
*******************	
	LShistor	 =  ""					&& historico geral
	LNtotacm	 = 	0					&& acumula total geral
	LNctrdoc	 =	0					&& indica n. docs  incluidos
	LNctracm	 =	0					&& indica n. docs acm no cheque
	m.fornecedor = 	pagar.fornecedor    && pepara teste quebra
    m.chqctr     =  m.chqinic           && implementa cheques
    m.cheque     =  m.chqinic           && num. cheques
	m.status 	 =	"NA"				&& status normal p/ tds regis.
	LNimpressos = 0

	IF	LFverimporta
		DO ULnumchq  && busca numero do ultimo cheque
	ENDIF
	IF 	LFimporta
		DO ULfazimport  && processa importacao normal
	ENDIF
	DO RELFIM   && ENCERRA PROGRESSAO DE STATUS
	SELE chqcap
	m.num_docs	= LNctrdoc
	m.valor		= LNtotacm
	GATHER MEMVAR MEMO
	UNLOCK
	SHOW GET m.num_docs
	SHOW GET m.valor
RETURN
