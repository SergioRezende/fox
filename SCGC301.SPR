PROCEDURE BTN_VAL1
	PARAMETER tecla, m.chv_ler, m.chv_compara, m.chv_brow
	SELE chqcap
	DO CASE
		CASE tecla = 'OPCAO1'
			DO ULimporta
		CASE tecla = 'OPCAO2'
			DO ULimprime
		CASE tecla = 'OPCAO3'
			DO ULcancimp
		CASE tecla = 'OPCAO4'
			DO ULcancchq
        CASE tecla = "DELETE" AND !isediting
*	*	*	*	*	*	*	* APAGA REGISTROS RELACIONADOS			
			IF EOF() OR BOF()
			   WAIT WINDOW C_ENDFILE NOWAIT
			   RETURN
			ENDIF
			IF !fox_alert("Confirma a EXCLUSAO dos lancamentos deste"+;
						" documento ?")
			   RETURN
			ENDIF
*-*-*-**-*-*-*-*-*-*-*-*--*> INICIA TRANZACAO
			SELE chqpag
			SET ORDER TO TAG cheques
			SET NEAR ON
			SEEK STR(m.empresa,3)+DTOS(m.data)+;
				 STR(m.numero,5)+STR(m.banco,3)
			SET NEAR OFF
			DO WHILE !EOF() AND	m.numero 	= numero 	AND ;
								wp_empresa 	= empresa 	AND ;
								m.banco 	= banco 	AND ;
								m.data 		= data
				SELE pagar
				SET ORDER TO TAG doc
				SEEK STR(m.empresa,3)+STR(chqpag.fornecedor,5)+;
						STR(chqpag.doc,11)
				IF FOUND()
					IF 	pagar.cheque = chqpag.cheque AND;
						pagar.banco	 = chqpag.banco
						=REGLOCK()
						REPLACE pagar.cheque  	with 0
						REPLACE pagar.dt_pgto 	with CTOD('  .  .  ')
						REPLACE pagar.vlr_pgto	with 0
					ENDIF
				ENDIF
				SELE chqpag				
 				DELETE
			   	SKIP
			ENDDO
			SELECT chqcap
		    do btn_val with tecla, m.chv_ler, m.chv_compara
*-*-*-**-*-*-*-*-*-*-*-*--*> FIM TRANZACAO
			RETURN .T.
		OTHERWISE
		    DO btn_val with tecla, m.chv_ler, m.chv_compara, m.chv_brow
	ENDCASE
	m.empresa	= wp_empresa
	SHOW GET m.empresa
	SELE banco
	SET ORDER TO TAG banco
	SEEK m.banco
	m.nome_banco = banco.nome

	SELE chqcap
	SHOW GET m.nome_banco
    IF tecla $ 'ADD/EDIT'
       RETURN
    ENDIF
RETURN

